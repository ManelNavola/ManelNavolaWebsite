{
  "name": "manel-navola-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "deploy": "vue-cli-service build & react-snap & echo Deploying in firebase... & firebase deploy",
    "postbuild": "react-snap"
  },
  "dependencies": {
    "core-js": "^3.1.2",
    "fibers": "^4.0.2",
    "firebase-admin": "^8.8.0",
    "firebase-functions": "^3.3.0",
    "node-sass": "^4.13.0",
    "request": "^2.88.0",
    "vue": "^2.6.10",
    "vue-meta": "^2.3.1",
    "vue-router": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^5.0.0",
    "expose-loader": "^0.7.5",
    "react-snap": "^1.23.0",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "reactSnap": {
    "source": "dist",
    "minifyHtml": {
      "collapseWhitespace": true,
      "removeComments": true
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
